@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PublicObject/PUB02/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
					{ label: "SID", name: "SID", hidden: true, key: true, width: 80, align: 'left' },
			                    { label: "SID", name: "SID", width: 80, align: 'left' },
				                     { label: "ObjectType", name: "ObjectType", width: 80, align: 'left' },
				                     { label: "UseReason", name: "UseReason", width: 80, align: 'left' },
				                     { label: "Subject", name: "Subject", width: 80, align: 'left' },
				                     { label: "Description", name: "Description", width: 80, align: 'left' },
				                     { label: "EmployeeID", name: "EmployeeID", width: 80, align: 'left' },
				                     { label: "DepartmentID", name: "DepartmentID", width: 80, align: 'left' },
				                     { label: "ObjectSID", name: "ObjectSID", width: 80, align: 'left' },
				                     { label: "BookingStartTime", name: "BookingStartTime", width: 80, align: 'left' },
				                     { label: "BookingEndTime", name: "BookingEndTime", width: 80, align: 'left' },
				                     { label: "CreateTime", name: "CreateTime", width: 80, align: 'left' },
				                     { label: "ProjectSID", name: "ProjectSID", width: 80, align: 'left' },
				                     { label: "Mileage", name: "Mileage", width: 80, align: 'left' },
				                     { label: "MileageLast", name: "MileageLast", width: 80, align: 'left' },
				                     { label: "Status", name: "Status", width: 80, align: 'left' },
				                     { label: "LeaveTime", name: "LeaveTime", width: 80, align: 'left' },
				                     { label: "BackTime", name: "BackTime", width: 80, align: 'left' },
				                     { label: "GuardEMPID", name: "GuardEMPID", width: 80, align: 'left' },
				 				
            ],
			pager: "#gridPager",
            sortname: 'Id asc,CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增資料",
            url: "/PublicObject/PUB02/Form",
            width: "640px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Form",
            title: "修改資料",
            url: "/PublicObject/PUB02/Form?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/PublicObject/PUB02/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().SID },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Details",
            title: "查看資料",
            url: "/PublicObject/PUB02/Details?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-info dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建資料</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改資料</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>刪除資料</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看資料</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="資料名稱/資料編號" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
	<div id="gridPager"></div>
</div>

