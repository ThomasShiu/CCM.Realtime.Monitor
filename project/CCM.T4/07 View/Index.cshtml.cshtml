@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/RDManage/RDM04/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
					{ label: "SID", name: "SID", hidden: true, key: true, width: 80, align: 'left' },
			                    { label: "SID", name: "SID", width: 80, align: 'left' },
				                     { label: "ORD_NO", name: "ORD_NO", width: 80, align: 'left' },
				                     { label: "ORD_DATE", name: "ORD_DATE", width: 80, align: 'left' },
				                     { label: "PROD_NO", name: "PROD_NO", width: 80, align: 'left' },
				                     { label: "ITEM_NO", name: "ITEM_NO", width: 80, align: 'left' },
				                     { label: "ITEM_NM", name: "ITEM_NM", width: 80, align: 'left' },
				                     { label: "EXPORT_DATE", name: "EXPORT_DATE", width: 80, align: 'left' },
				                     { label: "EXPORT_QTY", name: "EXPORT_QTY", width: 80, align: 'left' },
				                     { label: "TO_DEPT", name: "TO_DEPT", width: 80, align: 'left' },
				                     { label: "TO_EMP", name: "TO_EMP", width: 80, align: 'left' },
				                     { label: "FM_DEPT", name: "FM_DEPT", width: 80, align: 'left' },
				                     { label: "FM_EMP", name: "FM_EMP", width: 80, align: 'left' },
				                     { label: "CS_NO", name: "CS_NO", width: 80, align: 'left' },
				                     { label: "SHORT_NM", name: "SHORT_NM", width: 80, align: 'left' },
				                     { label: "REMARK", name: "REMARK", width: 80, align: 'left' },
				                     { label: "STATUS", name: "STATUS", width: 80, align: 'left' },
				                     { label: "GUID", name: "GUID", width: 80, align: 'left' },
				                     { label: "ORGANIZATION", name: "ORGANIZATION", width: 80, align: 'left' },
				                     { label: "CreatorTime", name: "CreatorTime", width: 80, align: 'left' },
				                     { label: "CreatorUserId", name: "CreatorUserId", width: 80, align: 'left' },
				                     { label: "LastModifyTime", name: "LastModifyTime", width: 80, align: 'left' },
				                     { label: "LastModifyUserId", name: "LastModifyUserId", width: 80, align: 'left' },
				 				
            ],
			pager: "#gridPager",
            sortname: 'SID asc,CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/RDManage/RDM04/Form",
            width: "640px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/RDManage/RDM04/Form?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/RDManage/RDM04/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().SID },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/RDManage/RDM04/Details?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-info dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>刪除</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="關鍵字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
	<div id="gridPager"></div>
</div>

