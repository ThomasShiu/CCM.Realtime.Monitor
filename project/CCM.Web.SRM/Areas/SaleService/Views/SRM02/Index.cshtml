@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/SaleService/SRM02/GetGridJson",
            height: $(window).height() - 128,
            colModel: [

			                    { label: "產品號碼", name: "PROD_NO", key: true, width: 70, align: 'left' },
				                     { label: "型式", name: "PROD_TY", width: 70, align: 'left' },
				                     { label: "產品品號", name: "ITEM_NO", width: 100, align: 'left' },
				                     { label: "產品品名", name: "ITEM_NM", width: 180, align: 'left' },
				                     { label: "規格", name: "ITEM_SP", width: 110, align: 'left' },
				                     { label: "主件品號", name: "M_ITEM_NO", width: 100, align: 'left' },
				                     { label: "主件號碼", name: "M_ITEM_ID", width: 100, align: 'left' },
				                     {
				                         label: "出貨日", name: "SO_DT", width: 80, align: 'left',
				                         formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
				                     },
				                     //{ label: "出貨單別", name: "SO_TY", width: 70, align: 'center' },
				                     //{ label: "出貨單號", name: "SO_NO", width: 80, align: 'left' },
				                     //{ label: "出貨序號", name: "SO_SR", width: 60, align: 'center' },
				                     //{ label: "經銷客戶", name: "SO_CS_NO", width: 60, align: 'left' },
				                     //{ label: "客戶名稱", name: "SO_CS_NM", width: 70, align: 'left' },
				                     //{ label: "經銷商", name: "FA_NO", hidden:true , width: 80, align: 'left' },
				                     //{ label: "使用客戶", name: "CS_NO", width: 70, align: 'left' },
				                     //{ label: "使用客戶名稱", name: "CS_NM", width: 80, align: 'left' },
				                     //{ label: "送貨地址", name: "TO_ADDR", width: 120, align: 'left' },
				                     { label: "保固月數", name: "PROD_GUAR_MM", width: 60, align: 'center' },
				                     {
				                         label: "保固截止日", name: "PROD_GUAR_DT", width: 80, align: 'left',
				                         formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
				                     },
				                     { label: "主件保固月數", name: "M_ITEM_GUAR_MM", hidden: true, width: 80, align: 'left' },
				                     {
				                         label: "主件保固截止日", name: "M_ITEM_GUAR_DT", hidden: true, width: 80, align: 'left',
				                         formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
				                     },
				                     { label: "備註", name: "REMK", hidden: true, width: 80, align: 'left' },
				                     { label: "訂單單別", name: "CO_TY", hidden: true, width: 60, align: 'left' },
				                     { label: "單號", name: "CO_NO", hidden: true, width: 80, align: 'left' },
				                     { label: "序號", name: "CO_SR", hidden: true, width: 30, align: 'right' },
				                     { label: "", name: "", width: 2, align: 'right' },


            ],
			pager: "#gridPager",
			sortname: 'SO_DT desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }


    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().PROD_NO;
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/SaleService/SRM02/Details?keyValue=" + keyValue,
            width: "940px",
            height: "500px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-info dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>刪除</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="關鍵字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

