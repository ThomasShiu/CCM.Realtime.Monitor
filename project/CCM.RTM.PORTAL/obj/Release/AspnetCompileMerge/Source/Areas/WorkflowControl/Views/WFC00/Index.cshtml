@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/WorkflowControl/WFC00/GetGridJson",
            height: $(window).height() - 158,
            colModel: [
					{ label: "SID", name: "SID", hidden: true, key: true, width: 80, align: 'left' },
			                    { label: "ROLENM", name: "ROLENM", hidden: true, width: 80, align: 'left' },
				                { label: "部門代碼", name: "DEP_NO", width: 60, align: 'left' },
				                { label: "部門名稱", name: "DEP_NM", width: 120, align: 'left' },
				                { label: "工號", name: "EMPLYID8", width: 60, align: 'center' },
				                { label: "姓名", name: "EMP8_NM",  width: 60, align: 'center' },
				                { label: "工號", name: "EMPLYID9", width: 60, align: 'center' },
				                { label: "姓名", name: "EMP9_NM",  width: 60, align: 'center' },
				                { label: "工號", name: "SIGNEMPLYID1",   width: 60, align: 'center' },
				                { label: "姓名", name: "SIGNEMPLYID1NM", width: 60, align: 'center' },
				                { label: "工號", name: "SIGNEMPLYID2",   width: 60, align: 'center' },
				                { label: "姓名", name: "SIGNEMPLYID2NM", width: 60, align: 'center' },
				                { label: "工號", name: "SIGNEMPLYID3",   width: 60, align: 'center' },
				                { label: "姓名", name: "SIGNEMPLYID3NM", width: 60, align: 'center' },
				                { label: "工號", name: "SIGNEMPLYID4",   width: 60, align: 'center' },
				                { label: "姓名", name: "SIGNEMPLYID4NM", width: 60, align: 'center' },
				                { label: "工號", name: "PROXY1ID", width: 60, align: 'center' },
				                { label: "姓名", name: "PROXY1NM", width: 60, align: 'center' },
				                { label: "工號", name: "PROXY2ID", width: 60, align: 'center' },
				                { label: "姓名", name: "PROXY2NM", width: 60, align: 'center' },
				                { label: "工號", name: "PROXY3ID", width: 60, align: 'center' },
				                { label: "姓名", name: "PROXY3NM", width: 60, align: 'center' },
                                { label: "", name: "", width: 60, align: 'center' },

            ],
			pager: "#gridPager",
			sortname: 'SID asc',
			viewrecords: true
        });
        $('#gridList').setGroupHeaders({
            useColSpanStyle: true,
            groupHeaders: [
                { "numberOfColumns": 2, "titleText": "取代一階主管", "startColumnName": "EMPLYID8" },
                { "numberOfColumns": 2, "titleText": "取代二階主管", "startColumnName": "EMPLYID9" },
                { "numberOfColumns": 2, "titleText": "一階主管", "startColumnName": "SIGNEMPLYID1" },
                { "numberOfColumns": 2, "titleText": "二階主管", "startColumnName": "SIGNEMPLYID2" },
                { "numberOfColumns": 2, "titleText": "三階主管", "startColumnName": "SIGNEMPLYID3" },
                { "numberOfColumns": 2, "titleText": "四階主管", "startColumnName": "SIGNEMPLYID4" },
                { "numberOfColumns": 2, "titleText": "一階代理主管", "startColumnName": "PROXY1ID" },
                { "numberOfColumns": 2, "titleText": "二階代理主管", "startColumnName": "PROXY2ID" },
                { "numberOfColumns": 2, "titleText": "三階代理主管", "startColumnName": "PROXY3ID" },
            ]
        });
        $("#btn_search").click(function () {
            var grid = $('#gridList');
            delete grid;
            $('#gridList').replaceWith(grid);

            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }



    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增資料",
            url: "/WorkflowControl/WFC00/Form",
            width: "640px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Form",
            title: "修改資料",
            url: "/WorkflowControl/WFC00/Form?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/WorkflowControl/WFC00/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().SID },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Details",
            title: "查看資料",
            url: "/WorkflowControl/WFC00/Details?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-info dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建資料</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                @*<li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改資料</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>刪除資料</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看資料</a></li>*@
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="資料名稱/資料編號" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

