@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    //var ParentSID = $.request("ParentSID");
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/OrderManage/ORD03/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
					{ label: "SID", name: "SID", hidden: true, key: true, width: 80, align: 'left' },
				    { label: "ParentSID", name: "ParentSID", hidden: true, width: 80, align: 'left' },
				    { label: "部門", name: "DepID", hidden: true, width: 140, align: 'left' },
                    {
                        label: "部門", name: "", width: 120, align: 'left',
                        formatter: function (cellvalue, options, rowObject) {
                            return top.clients.dept[rowObject.DepID] == null ? "" : top.clients.dept[rowObject.DepID].fullname;
                        }
                    },
                    { label: "訂購人", name: "EmpID", hidden: true, width: 80, align: 'left' },
                    {
                        label: "訂購人", name: "", width: 80, align: 'left',
                        formatter: function (cellvalue, options, rowObject) {
                            return top.clients.user[rowObject.EmpID] == null ? "" : top.clients.user[rowObject.EmpID].fullname;
                    } },
				    { label: "OrderMenuSID", name: "OrderMenuSID", hidden: true, width: 80, align: 'left' },
				    { label: "數量", name: "Qty", width: 80, align: 'left' },
				    { label: "單價", name: "UnitPrice", width: 80, align: 'left' },
				    { label: "AdjustSID", name: "AdjustSID", hidden: true, width: 80, align: 'left' },
				    { label: "增購額", name: "AdjustAmount", width: 80, align: 'left' },
				    { label: "增購量", name: "AdjustQty", width: 80, align: 'left' },
                    {
                        label: "訂購日", name: "CreatorTime", width: 80, align: 'left',
                        formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                    },
				    { label: "金額", name: "Amount", width: 80, align: 'left' },
				    { label: "備註", name: "Remark", width: 80, align: 'left' },
            ],
			pager: "#gridPager",
			sortname: 'CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/OrderManage/ORD03/Form",
            width: "640px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/OrderManage/ORD03/Form?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/OrderManage/ORD03/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().SID },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/OrderManage/ORD03/Details?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a  class="btn btn-info" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
           
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                <li><a onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a onclick="btn_delete()"><i class="fa fa-trash-o"></i>刪除</a></li>
                <li><a onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="關鍵字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

