@{
    ViewBag.Title = "首頁-公佈欄";
    Layout = "~/Views/Shared/_IndexPub.cshtml";
}

<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PublicObject/PUB05/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
					{ label: "SID", name: "SID", hidden: true, key: true, width: 80, align: 'left' },
				    { label: "主旨", name: "BUSubject", width: 180, align: 'left' },
				    {
				        label: "起始日", name: "StartDate", width: 120, align: 'left',
				        formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
				    },
				    {
				        label: "結束日", name: "EndDate", width: 120, align: 'left',
				        formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
				    },
				    {
				        label: "建立部門", name: "DepartmentID", width: 150, align: 'left',
				        formatter: function (cellvalue) {
				            return top.clients.dept[cellvalue] == null ? "" : top.clients.dept[cellvalue].fullname;
				        }
				    },
				    {
				        label: "建立人員", name: "EmployeeID", width: 80, align: 'left',
				        formatter: function (cellvalue, options, rowObject) {
				            return top.clients.user[rowObject.EmployeeID] == null ? "" : top.clients.user[rowObject.EmployeeID].fullname;
				        }
				    },
                    { label: "WhoCanSee", name: "WhoCanSee", hidden: true, width: 80, align: 'left' },
				    { label: "GUID", name: "GUID", hidden: true, width: 80, align: 'left' }
				   

            ],
			pager: "#gridPager",
			sortname: 'CreatorTime desc,StartDate desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }


    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Details",
            title: "查看資料",
            url: "/PublicObject/PUB05/DetailsPub?keyValue=" + keyValue,
            width: "740px",
            height: "500px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                <li><a id="NF-Details"  onclick="btn_details()"><i class="fa fa-search-plus"></i>查看資料</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="資料名稱/資料編號" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

