@{
    ViewBag.Title = "首頁-特約廠商";
    Layout = "~/Views/Shared/_IndexPub.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/OrderManage/ORD01/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
					{ label: "SID", name: "SID", hidden: true, key: true, width: 80, align: 'left' },
                     {
                         label: "超連結", name: "", width: 80, align: 'left',
                         formatter: function (cellvalue, options, rowObject) {
                             return rowObject.WebSiteURL == null ? "" : '<a href=\"' + rowObject.WebSiteURL + '\" target="_blank" class="btn btn-primary btn-sm" role="button">點我</a>';
                         }
                     },
				    { label: "商店名稱", name: "Name", width: 200, align: 'left' },
				    { label: "電話", name: "Phone", width: 80, align: 'left' },
				    { label: "傳真", name: "Fax", hidden: true, width: 80, align: 'left' },
				    { label: "地址", name: "Address", width: 250, align: 'left' },
                   
                    { label: "備註", name: "Remark", width: 80, align: 'left' },
                    { label: "WebSiteURL", name: "WebSiteURL", hidden: true, width: 80, align: 'left' },
				    { label: "Contact", name: "Contact", hidden: true, width: 80, align: 'left' },
				    { label: "SubsidizeAmount", name: "SubsidizeAmount", hidden: true, width: 80, align: 'left' },
				    { label: "ContributingVendor", name: "ContributingVendor", hidden: true, width: 80, align: 'left' },
				    { label: "Offer", name: "Offer", hidden: true, width: 80, align: 'left' },
				   

            ],
			pager: "#gridPager",
            sortname: 'SID asc,CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
 
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Details",
            title: "查看資料",
            url: "/OrderManage/ORD01/DetailsPub?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                @*<li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看資料</a></li>*@
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="廠商名稱" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

