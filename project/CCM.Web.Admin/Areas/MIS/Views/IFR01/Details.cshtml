@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        $.ajax({
            url: "/MIS/IFR01/GetFormJson",
            data: { keyValue: keyValue },
            dataType: "json",
            async: false,
            success: function (data) {
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                $("#form1").find('div.ckbox label').attr('for', '');
            }
        });
    });
    function initControl() {
        //$("#F_OrganizeId").bindSelect({
        //    url: "/SystemManage/Organize/GetTreeSelectJson",
        //});
    }
</script>

<form id="form1">
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">

            <tr>
                <th class="formTitle">IP位址</th>
                <td class="formValue">
                    <input id="IP_ADDR" name="IP_ADDR" type="text" class="form-control required" placeholder="請輸入IP ADDRESS" />
                </td>
                <th class="formTitle">MAC位址</th>
                <td class="formValue">
                    <input id="MAC_ADDR" name="MAC_ADDR" type="text" class="form-control " placeholder="請輸入MAC ADDRESS" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">部門</th>
                <td class="formValue">
                    <input id="DEPT" name="DEPT" type="text" class="form-control " placeholder="" />
                </td>
                <th class="formTitle">使用者</th>
                <td class="formValue">
                    <input id="USER" name="USER" type="text" class="form-control " placeholder="" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">設備</th>
                <td class="formValue">
                    <input id="DEVICE" name="DEVICE" type="text" class="form-control " placeholder="" />
                </td>
                <th class="formTitle">作業系統</th>
                <td class="formValue">
                    <input id="OS" name="OS" type="text" class="form-control " placeholder="" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">群組</th>
                <td class="formValue">
                    <input id="GROUP" name="GROUP" type="text" class="form-control " placeholder="" />
                </td>
                <th class="formTitle">防毒軟體</th>
                <td class="formValue">
                    <input id="ANTIVIRUS" name="ANTIVIRUS" type="text" class="form-control" placeholder="" />
                </td>
            </tr>
            <tr>
                <th class="formTitle">備註</th>
                <td class="formValue" colspan="3">
                    <textarea id="REMARK" name="REMARK" class="form-control" style="height: 100px;"></textarea>
                </td>

            </tr>

        </table>
    </div>
</form>



