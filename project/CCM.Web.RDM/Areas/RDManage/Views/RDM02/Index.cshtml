@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    // 本機位址
    var vhost = '@Request.Url.Host';
    var vport = '@Request.Url.Port';
    if (vport != 80) {
        vport = ':@Request.Url.Port';
    }
    var pathlink = 'http://' + vhost + vport + '/';

    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/RDManage/RDM02/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
					{ label: "SID", name: "SID", hidden: true, key: true, width: 80, align: 'left' },
                    { label: "客戶", name: "Customer", hidden: true, width: 60, align: 'left' },
				    
				    { label: "機台編號", name: "Machine_Id", width: 100, align: 'left' },
                    { label: "原檔名", name: "oldFileName", width: 100, align: 'left' },
                    { label: "CPU Serial Number", name: "CPU_SN", width: 140, align: 'left' },
                    { label: "HD Serial Number", name: "HD_SN", width: 110, align: 'left' },
                    { label: "HD Firmware", name: "HD_Fireware", width: 90, align: 'left' },
                    { label: "HD Module Number", name: "HD_Moduleno", width: 140, align: 'left' },
				    { label: "原檔下載", name: "UploadPath", hidden: true, width: 80, align: 'left' },
                    {
                        label: "原檔下載", name: "", width: 70, align: 'center',
                        formatter: function (cellvalue, options, rowObject) {
                            if (rowObject.UploadPath != null & rowObject.UploadPath != '') {
                                return '<a href="' + pathlink + rowObject.DownloadPath + '" class="btn btn-info btn-sm">下載</a> ';
                            } else {
                                return '';
                            }
                        }
                    },
				    { label: "認證檔(NEW)", name: "DownloadPath", hidden: true, width: 80, align: 'left' },
                    { label: "認證檔(OLD)", name: "DownloadPath2", hidden: true, width: 80, align: 'left' },
                     {
                         label: "認證檔NEW", name: "", width: 70, align: 'center',
                         formatter: function (cellvalue, options, rowObject) {
                             if (rowObject.DownloadPath != null & rowObject.DownloadPath != ''){
                                 return '<a href="' + pathlink + rowObject.DownloadPath + '" class="btn btn-info btn-sm">下載</a> ';
                             } else {
                                 return '';
                             }
                         }
                     },
                     {
                         label: "認證檔OLD", name: "", width: 70, align: 'center',
                         formatter: function (cellvalue, options, rowObject) {
                             if (rowObject.DownloadPath2 != null & rowObject.DownloadPath2 != '') {
                                 return '<a href="' + pathlink + rowObject.DownloadPath + '" class="btn btn-info btn-sm">下載</a> ';
                             } else {
                                 return '';
                             }
                         }
                     },
                       {
                           label: "啟用", name: "Enable", width: 60, align: "center",
                           formatter: function (cellvalue) {
                               return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                           }
                       },
                    { label: "備註", name: "Remark", width: 120, align: 'left' },
                    {
                        label: "建立時間", name: "CreatorTime", width: 120, align: 'left',
                        formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i', newformat: 'Y-m-d H:i' }
                    },
                    {
                        label: "修改時間", name: "LastModifyTime", width: 120, align: 'left',
                        formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i', newformat: 'Y-m-d H:i' }
                    },
                    { label: "", name: "", width: 180, align: 'left' },
            ],
			pager: "#gridPager",
			sortname: 'CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/RDManage/RDM02/Form",
            width: "640px",
            height: "380px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/RDManage/RDM02/Form?keyValue=" + keyValue,
            width: "640px",
            height: "380px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/RDManage/RDM02/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().SID },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/RDManage/RDM02/Details?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-info dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>刪除</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="關鍵字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

