
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/OrderManage/ORD05/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        } else {
            $("#MEAT").val('1');
            $("#VEGETABLE").val('0');
        }
    });
    function initControl() {
        // 部門
        $("#DEPID").bindSelect({
            url: "/Human/HRS00/GetHR_DEP",
            id: "DEPID",
            text: "DEPNM"
        });

        // 員工 by 部門
        $("#EMPLYID").bindSelect({
            url: "/Human/HRS00/GetHR_EMPLY_ALL",
            id: "EMPLYID",
            text: "EMPLYNM"
        });
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/OrderManage/ORD05/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    $(document).ready(function () {

        $('#DEPID').change(function () {
            // 員工 by 部門
            $("#EMPLYID").empty().bindSelect({
                url: "/Human/HRS00/GetHR_EMPLY?keyword=" + $(this).children('option:selected').val(),
                id: "EMPLYID",
                text: "EMPLYNM"
            });
        });
    });
</script>

<form id="form1">
    <input id="SID" name="SID" type="hidden" value="" />
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">
            <tr>
                <th class="formTitle">登記部門</th>
                <td class="formValue">
                    <select id="DEPID" name="DEPID" class="form-control required">
                        <option></option>
                    </select>
                </td>
                <th class="formTitle">登記員工</th>
                <td class="formValue">
                    <select id="EMPLYID" name="EMPLYID" class="form-control required">
                        <option></option>
                    </select>
                </td>
            </tr>

            <tr>
                <th class="formTitle">登記地點</th>
                <td class="formValue">
                    <select id="LOCATION" name="LOCATION" class="form-control required">
                        <option value="1">精湛總廠</option>
                        <option value="2">一廠</option>
                        <option value="3">全盈</option>
                        <option value="4">關廟</option>
                        <option value="5">柳營</option>
                    </select>
                    
                </td>
            </tr>
            <tr>
                <th class="formTitle">葷食人數</th>
                <td class="formValue">
                    <input id="MEAT" name="MEAT" type="number" class="form-control required"  />
                </td>
                <th class="formTitle">素食人數</th>
                <td class="formValue">
                    <input id="VEGETABLE" name="VEGETABLE" type="number" class="form-control required"  />
                </td>
            </tr>
            <tr>
                
            </tr>
            <tr>
                <th class="formTitle">備註</th>
                <td class="formValue" colspan="3">
                    <textarea id="REMARK" name="REMARK" class="form-control" style="height: 100px;"></textarea>
                </td>
            </tr>
        </table>
    </div>
</form>



