
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/OrderManage/ORD07/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
    });
    function initControl() {
  
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/OrderManage/ORD07/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }

    function changeValue() {
        var MEATPEOPLES = $('#MEATPEOPLES').val();             // 設定葷食
        var AbsentMEATPEOPLES = $('#AbsentMEATPEOPLES').val(); // 缺勤葷食
        var ChangeMEATPEOPLES = $('#ChangeMEATPEOPLES').val(); // 登記葷食
        var TuneMEATPEOPLES = $('#TuneMEATPEOPLES').val();     // 調整葷食
        var REALMEATPEOPLES = $('#REALMEATPEOPLES').val();     // 實際葷食
        REALMEATPEOPLES = parseInt(MEATPEOPLES) +parseInt(AbsentMEATPEOPLES) + parseInt(ChangeMEATPEOPLES) + parseInt(TuneMEATPEOPLES);
        $('#REALMEATPEOPLES').val(REALMEATPEOPLES);

        var VEGEPEOPLES = $('#VEGEPEOPLES').val();             // 設定素食
        var AbsentVEGEPEOPLES = $('#AbsentVEGEPEOPLES').val(); // 缺勤素食
        var ChangeVEGEPEOPLES = $('#ChangeVEGEPEOPLES').val(); // 登記素食
        var TuneVEGEPEOPLES = $('#TuneVEGEPEOPLES').val();     // 調整素食
        var REALVEGEPEOPLES = $('#REALVEGEPEOPLES').val();     // 實際素食
        REALVEGEPEOPLES = parseInt(VEGEPEOPLES) + parseInt(AbsentVEGEPEOPLES) + parseInt(ChangeVEGEPEOPLES) + parseInt(TuneVEGEPEOPLES);
        $('#REALVEGEPEOPLES').val(REALVEGEPEOPLES);

        var TunePAYEMPLYS = $('#TunePAYEMPLYS').val();  // 調整數量
        var REALPAYEMPLYS = $('#REALPAYEMPLYS').val();  // 實際數量

        REALPAYEMPLYS = parseInt(REALMEATPEOPLES) + parseInt(REALVEGEPEOPLES);
        $('#REALPAYEMPLYS').val(REALPAYEMPLYS);

        var UNITPRICE = $('#UNITPRICE').val();     // 單價
        var TOTAL = (parseInt(REALPAYEMPLYS) + parseInt(TunePAYEMPLYS)) * parseInt(UNITPRICE);
        $('#TOTAL').val(TOTAL);

    }
</script>

<form id="form1">
    <input id="SID" name="SID" type="hidden" value="" />
    <div style="padding-top: 20px; margin-right: 20px;">
        <table class="form">

            <tr>
                <th class="formTitle">日期</th>
                <td class="formValue">
                    <input id="LUNCHDATE" name="LUNCHDATE" type="text" class="form-control input-wdatepicker " disabled="disabled"
                           onfocus="WdatePicker({ startDate: '%y/%M/%d', dateFmt: 'yyyy/MM/dd', alwaysUseStartDate: true })" />
                </td>
                <th class="formTitle">地點</th>
                <td class="formValue">
                    <select id="LOCATION" name="LOCATION" class="form-control required" disabled="disabled">
                        <option value="1">精湛總廠</option>
                        <option value="2">一廠</option>
                        <option value="3">全盈</option>
                        <option value="4">關廟</option>
                        <option value="5">柳營</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th class="formTitle">設定葷食數</th>
                <td class="formValue">
                    <input id="MEATPEOPLES" name="MEATPEOPLES" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
                <th class="formTitle">設定素食數</th>
                <td class="formValue">
                    <input id="VEGEPEOPLES" name="VEGEPEOPLES" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle">缺勤葷食數</th>
                <td class="formValue">
                    <input id="AbsentMEATPEOPLES" name="AbsentMEATPEOPLES" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
                <th class="formTitle">缺勤素食數</th>
                <td class="formValue">
                    <input id="AbsentVEGEPEOPLES" name="AbsentVEGEPEOPLES" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle">登記葷食數</th>
                <td class="formValue">
                    <input id="ChangeMEATPEOPLES" name="ChangeMEATPEOPLES" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
                <th class="formTitle">登記素食數</th>
                <td class="formValue">
                    <input id="ChangeVEGEPEOPLES" name="ChangeVEGEPEOPLES" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle">調整葷食數</th>
                <td class="formValue">
                    <input id="TuneMEATPEOPLES" name="TuneMEATPEOPLES" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
                <th class="formTitle">調整素食數</th>
                <td class="formValue">
                    <input id="TuneVEGEPEOPLES" name="TuneVEGEPEOPLES" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle">實際葷食數</th>
                <td class="formValue">
                    <input id="REALMEATPEOPLES" name="REALMEATPEOPLES" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
                <th class="formTitle">實際素食數</th>
                <td class="formValue">
                    <input id="REALVEGEPEOPLES" name="REALVEGEPEOPLES" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle">調整數量</th>
                <td class="formValue">
                    <input id="TunePAYEMPLYS" name="TunePAYEMPLYS" type="number" class="form-control text-center required"  onchange="changeValue()"/>
                </td>
                <th class="formTitle">實際數量</th>
                <td class="formValue">
                    <input id="REALPAYEMPLYS" name="REALPAYEMPLYS" type="number" class="form-control text-center required"  />
                </td>
            </tr>
            <tr>
                <th class="formTitle">單價</th>
                <td class="formValue">
                    <input id="UNITPRICE" name="UNITPRICE" type="number" class="form-control text-center required"  disabled="disabled"/>
                </td>
                <th class="formTitle">費用金額</th>
                <td class="formValue">
                    <input id="TOTAL" name="TOTAL" type="number" class="form-control text-center required"  />
                </td>
            </tr>

            <tr>
                <th class="formTitle">備註</th>
                <td class="formValue" colspan="3">
                    <textarea id="REMARK" name="REMARK" class="form-control " style="height: 60px;"> </textarea>
                </td>
            </tr>
            

        </table>
    </div>
</form>



