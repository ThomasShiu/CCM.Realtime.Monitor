@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/OrderManage/ORD07/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
					{ label: "SID", name: "SID", hidden: true, key: true, width: 80, align: 'left' },
				    { label: "日期", name: "LUNCHDATE", width: 80, align: 'left' },
				    { label: "LOCATION", name: "LOCATION", hidden: true, width: 80, align: 'left' },
                    {
                        label: "地點", name: "", width: 60, align: 'left',
                        formatter: function (cellvalue, options, rowObject) {
                            if (rowObject.LOCATION == '1') {
                                return '精湛總廠';
                            } else if (rowObject.LOCATION == '2') {
                                return '一廠';
                            } else if (rowObject.LOCATION == '3') {
                                return '全盈';
                            } else if (rowObject.LOCATION == '4') {
                                return '關廟';
                            } else if (rowObject.LOCATION == '5') {
                                return '柳營';
                            }
                        }
                    },
				    { label: "設定葷食數", name: "MEATPEOPLES", width: 65, align: 'right' },
				    { label: "設定素食數", name: "VEGEPEOPLES", width: 65, align: 'right' },
				    { label: "缺勤葷食數", name: "AbsentMEATPEOPLES", width: 65, align: 'right' },
				    { label: "缺勤素食數", name: "AbsentVEGEPEOPLES", width: 65, align: 'right' },
				    { label: "登記葷食數", name: "ChangeMEATPEOPLES", width: 65, align: 'right' },
				    { label: "登記素食數", name: "ChangeVEGEPEOPLES", width: 65, align: 'right' },
				    { label: "調整葷食數", name: "TuneMEATPEOPLES", width: 65, align: 'right' },
				    { label: "調整素食數", name: "TuneVEGEPEOPLES", width: 65, align: 'right' },
				    { label: "實際葷食數", name: "REALMEATPEOPLES", width: 65, align: 'right' },
				    { label: "實際素食數", name: "REALVEGEPEOPLES", width: 65, align: 'right' },
				    { label: "調整數量", name: "TunePAYEMPLYS", width: 60, align: 'right' },
				    { label: "實際數量", name: "REALPAYEMPLYS", width: 60, align: 'right' },
				    { label: "單價", name: "UNITPRICE", width: 50, align: 'right' },
				    { label: "費用金額", name: "TOTAL", width: 65, align: 'right' },
				    { label: "備註", name: "REMARK", width: 80, align: 'left' },

            ],
			pager: "#gridPager",
			sortname: 'LOCATION asc,LUNCHDATE desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/OrderManage/ORD07/Form",
            width: "740px",
            height: "500px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_calamount() {
        msg = "此功能未完成!";
        window.setTimeout(function () {
            $.modalMsg(msg, "warning");
        }, 500);
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Form",
            title: "修改",
            url: "/OrderManage/ORD07/Form?keyValue=" + keyValue,
            width: "740px",
            height: "500px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/OrderManage/ORD07/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().SID },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Details",
            title: "查看",
            url: "/OrderManage/ORD07/Details?keyValue=" + keyValue,
            width: "740px",
            height: "480px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-calcul" authorize="yes" class="btn btn-info dropdown-text" onclick="btn_calamount()"><i class="fa fa-plus"></i>執行計算今日用餐人數</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>刪除</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="關鍵字" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

