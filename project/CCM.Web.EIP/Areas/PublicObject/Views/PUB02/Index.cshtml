@{
    // 預約公務車
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script src="~/Content/js/jqtimers/jquery.timers.js"></script>
<script>
    var usercode = '@CCM.Code.OperatorProvider.Provider.GetCurrent().UserCode';
    $(function () {
        gridList();

        // 公共物件
        $("#PublicObject").bindSelect2({
            url: "/PublicObject/PUB00/GetPublicObject?keyword=公務車輛",
            id: "SID",
            text: "ObjectNM"
        });


        var today = new Date();
        var yyyy = today.getFullYear();
        for (var i = yyyy; i >= yyyy-4; i--) {
            $("#selectyear").append($("<option></option>").attr("value", i).text(i));
        }

        $("#pdate").val(GetToday());

        var btnPrint = $("#NF-print").attr('authorize');
        if (btnPrint != 'yes') {
            $('#pdate').hide();
        }
        var btnPrint2 = $("#NF-print2").attr('authorize');
        if (btnPrint2 != 'yes') {
            $('#selectyear').hide();
        }
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/PublicObject/PUB02/GetCarGridJson",
            height: $(window).height() - 128,
            colModel: [
					    { label: "SID", name: "SID", hidden: true, key: true, width: 80, align: 'left' },
                        { label: "ObjectType", name: "ObjectType", hidden: true, width: 80, align: 'left' },
                        { label: "預約原因", name: "UseReason", width: 70, align: 'left' },
				        { label: "借用說明", name: "Subject", width: 120, align: 'left' },
				        { label: "詳細說明", name: "Description", width: 120, align: 'left' },
                        { label: "ObjectSID", name: "ObjectSID", hidden: true, width: 80, align: 'left' },
                        {
                            label: "車輛號碼", name: "", width: 120, align: 'left',
                            formatter: function (cellvalue, options, rowObject) {
                                return top.clients.pubobject[rowObject.ObjectSID] == null ? "" : top.clients.pubobject[rowObject.ObjectSID].ObjectNM;
                            }
                        },
				        {
				            label: "使用時間-起", name: "BookingStartTime", width: 100, align: 'left',
				            formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i', newformat: 'Y-m-d H:i' }
				        },
				        {
				            label: "使用時間-迄", name: "BookingEndTime", width: 100, align: 'left',
				            formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i', newformat: 'Y-m-d H:i' }
				        },

				        {
				            label: "部門", name: "DepartmentID", width: 120, align: 'left',
				            formatter: function (cellvalue) {
				                return top.clients.dept[cellvalue] == null ? "" : top.clients.dept[cellvalue].fullname;
				            }
				        },
                         {
                             label: "申請者", name: "", width: 50, align: 'left',
                             formatter: function (cellvalue, options, rowObject) {
                                 return top.clients.user[rowObject.EmployeeID] == null ? "" : top.clients.user[rowObject.EmployeeID].fullname;
                             }
                         },
                        { label: "出廠里程", name: "MileageLast",  width: 60, align: 'right' },
				        { label: "回廠里程", name: "Mileage",  width: 60, align: 'left' },
                        { label: "Status", name: "Status", hidden: true, width: 80, align: 'left' },
                        {
                            label: "狀態", name: "", width: 50, align: 'left',
                            formatter: function (cellvalue, options, rowObject) {
                                //return top.clients.dept[rowObject.STATUS] == null ? "" : top.clients.dept[rowObject.STATUS].fullname;
                                if (rowObject.Status == '鎖定') {
                                    return '<span class=\"label label-warning\">鎖定</span>';
                                } else if (rowObject.Status == '結束') {
                                    return '<span class=\"label label-success\">結束</span>';
                                } else if (rowObject.Status == '取消') {
                                    return '<span class=\"label label-default\">取消</span>';
                                }
                            }
                        },
                        {
                            label: "修改", name: "", width: 80, align: 'left',
                            formatter: function (cellvalue, options, rowObject) {
                                if (rowObject.Status == '結束' | rowObject.Status == '取消') {
                                    return '';
                                }else{
                                    if (rowObject.EmployeeID == usercode | rowObject.CreatorUserId == usercode | usercode == 'admin')
                                        return '<span class=\"label label-success\">可修改</span>';
                                    else if (rowObject.Mileage == 0 & usercode == 'bmw')
                                        return '<span class=\"label label-success\">可修改</span>';
                                    else
                                        return '';
                                }
                                }
                        },
                        { label: "EmployeeID", name: "EmployeeID", hidden: true, width: 80, align: 'left' },
				        { label: "CreateTime", name: "CreateTime", hidden: true, width: 80, align: 'left' },
				        { label: "ProjectSID", name: "ProjectSID", hidden: true, width: 80, align: 'left' },
				        { label: "LeaveTime", name: "LeaveTime", hidden: true, width: 80, align: 'left' },
				        { label: "BackTime", name: "BackTime", hidden: true, width: 80, align: 'left' },
				        { label: "GuardEMPID", name: "GuardEMPID", hidden: true, width: 80, align: 'left' },
                        { label: "CreatorUserId", name: "CreatorUserId", hidden: true, width: 80, align: 'left' },
            ],
			pager: "#gridPager",
			sortname: 'ObjectType asc,BookingStartTime desc',
			viewrecords: true,
			loadComplete: function () {
			    $(this).find(">tbody>tr.jqgrow").addClass("myAltRowClassEven");

			    var rowIds = $('#gridList').jqGrid('getDataIDs');
			    var datenow = GetNow();
			    //alert(rowData['BookingEndTime']);

			    for (i = 0; i < rowIds.length; i++) {//iterate over each row
			        rowData = $('#gridList').jqGrid('getRowData', rowIds[i]);
			        //set background style if ColValue === true\
			        if (rowData['Status'] == "鎖定" & datenow > rowData['BookingEndTime']
                        ) {
			            $('#gridList').jqGrid('setRowData', rowIds[i], false, "myAltRowClassLock");
			        } //if
			    } //for
			    //$(this).find(">tbody>tr.jqgrow:odd").addClass("myAltRowClassEven");
			    //$(this).find(">tbody>tr.jqgrow:even").addClass("myAltRowClassEven");
			}
        });

        $("#time_horizon a.btn-default").click(function () {
            $("#time_horizon a.btn-default").removeClass("active");
            $(this).addClass("active");
            $('#btn_search').trigger("click");
        });
        $("#btn_search").click(function () {
            var timeType = $("#time_horizon a.active").attr('data-value');
            var queryJson = {
                keyword: $("#txt_keyword").val(),
                keyword2: $('#PublicObject').val(),
                timeType: timeType,
            }
            $gridList.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
            }).trigger('reloadGrid');
        });


    }

    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增資料",
            url: "/PublicObject/PUB02/Form",
            width: "900px",
            height: "700px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    // 修改(一般)
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        var EmployeeID = $("#gridList").jqGridRowValue().EmployeeID;
        var CreatorUserId = $("#gridList").jqGridRowValue().CreatorUserId;
        var status = $("#gridList").jqGridRowValue().Status;
        if (status != '結束' & status != '取消') {
            //var guid = $("#gridList").jqGridRowValue().GUID;
            if (EmployeeID == usercode | CreatorUserId == usercode | usercode == 'admin') {
                $.modalOpen({
                    id: "Form",
                    title: "修改資料",
                    url: "/PublicObject/PUB02/Form?keyValue=" + keyValue,
                    width: "900px",
                    height: "650px",
                    callBack: function (iframeId) {
                        top.frames[iframeId].submitForm();
                    }
                });
            } else {
                msg = "只可修改自己建立的單據!";
                window.setTimeout(function () {
                    $.modalMsg(msg, "warning");
                }, 500);
            }
        } else {
            msg = "此單據已結束(取消)，不可修改。";
            window.setTimeout(function () {
                $.modalMsg(msg, "warning");
            }, 500);
        }
    }
    // 修改(守衛)
    function btn_edit_guard() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        var status = $("#gridList").jqGridRowValue().Status;
        //var guid = $("#gridList").jqGridRowValue().GUID;
        //if (status != '結束') {
            $.modalOpen({
                id: "Form",
                title: "修改資料",
                url: "/PublicObject/PUB02/Form2?keyValue=" + keyValue,
                width: "900px",
                height: "680px",
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
        //} else {
        //    msg = "此單據已結束，不可修改。";
        //    window.setTimeout(function () {
        //        $.modalMsg(msg, "warning");
        //    }, 500);
        //}
    }
    // 修改(管理)
    function btn_edit_admin() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Form",
            title: "修改資料",
            url: "/PublicObject/PUB02/Form?keyValue=" + keyValue,
            width: "900px",
            height: "650px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    // 刪除
    function btn_delete() {

        var CreatorUserId = $("#gridList").jqGridRowValue().CreatorUserId;
        var usercode = '@CCM.Code.OperatorProvider.Provider.GetCurrent().UserCode'
        var depid = '@CCM.Code.OperatorProvider.Provider.GetCurrent().DeptId'
        var status = $("#gridList").jqGridRowValue().Status;
        //var guid = $("#gridList").jqGridRowValue().GUID;
        if (status != '結束') {
            //var guid = $("#gridList").jqGridRowValue().GUID;
            if (CreatorUserId == usercode | usercode == 'admin' | depid == 'C00' | depid=='G20') {
                $.deleteForm({
                    url: "/PublicObject/PUB02/DeleteForm",
                    param: { keyValue: $("#gridList").jqGridRowValue().SID },
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            } else {
                msg = "只可刪除自己建立的單據!";
                window.setTimeout(function () {
                    $.modalMsg(msg, "warning");
                }, 500);
            }
        } else {
            msg = "此單據已結束，不可刪除。";
            window.setTimeout(function () {
                $.modalMsg(msg, "warning");
            }, 500);
        }
    }

    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Details",
            title: "查看資料",
            url: "/PublicObject/PUB02/Details?keyValue=" + keyValue,
            width: "900px",
            height: "650px",
            btn: null,
        });
    }

    function btn_calendar() {
        var keyValue ='';
        $.modalOpen({
            id: "Details",
            title: "查看資料",
            url: "/PublicObject/PUB02/Form4",
            width: "900px",
            height: "650px",
            btn: null,
        });
    }


    // 報表列印，每日里程
    function btn_print() {
        var pdate = $('#pdate').val();
        $.modalOpen({
            id: "Form",
            title: "列印",
            url: "/PublicObject/PUB02/Print?keyValue=" + pdate,
            width: "900px",
            height: "680px",
            btn: null,
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    // 報表列印，每月里程
    function btn_print2() {
        var pdate = $('#selectyear').val();
        $.modalOpen({
            id: "Form",
            title: "列印",
            url: "/PublicObject/PUB02/Print2?keyValue=" + pdate,
            width: "900px",
            height: "680px",
            btn: null,
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    $(document).ready(function () {
        //每5分鐘執行，無限次，並命名計時器名稱為 Timer1 30das
        //若時間間隔抵到，但函式程序仍未完成則需等待執行函式完成後再繼續計時
        $('body').everyTime('30das', 'TimerCarBooking', function () {
            //location.reload();
            //return false;
            $("#gridList").trigger("reloadGrid");
            
        }, 0, true);
    });
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <select id="selectyear" name="selectyear" class="form-control "  style="width:50px;height:18px">
                @*<option >2017</option>
                <option >2016</option>
                <option>2015</option>
                <option>2014</option>*@
            </select>
        </div>
        <div class="btn-group">
            <a id="NF-print2" authorize="yes" class="btn btn-info dropdown-text" onclick="btn_print2()"><i class="fa fa-print"></i>列印每月里程</a>
        </div>
        <div class="btn-group">
            <input id="pdate" name="pdate"  type="date" class="form-control" placeholder="日期" style="width:120px;height:18px">
        </div>
        <div class="btn-group">
            <a id="NF-print" authorize="yes" class="btn btn-info dropdown-text" onclick="btn_print()"><i class="fa fa-print"></i>列印每日里程</a>
        </div>
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-info dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>

        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                <li><a id="NF-edit-admin" authorize="yes" onclick="btn_edit_admin()"><i class="fa fa-pencil-square-o"></i>修改(管理)</a></li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                <li><a id="NF-edit-guard" authorize="yes" onclick="btn_edit_guard()"><i class="fa fa-pencil-square-o"></i>修改(守衛)</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>刪除</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看</a></li>
                @*<li><a id="NF-print" authorize="yes" onclick="btn_print()"><i class="fa fa-print"></i>列印</a></li>*@
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="說明" style="width: 100px;">
                        <select id="PublicObject" name="PublicObject" class="form-control "  style="width: 200px;">
                            <option value=""></option>
                        </select>
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
                <td style="padding-left: 10px;">
                    <div id="time_horizon" class="btn-group">
                        <a class="btn btn-default active" data-value="1">今日內</a>
                        <a class="btn btn-default" data-value="2">一周內</a>
                        <a class="btn btn-default" data-value="3">一月內</a>
                        <a class="btn btn-default" data-value="4">全部</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

