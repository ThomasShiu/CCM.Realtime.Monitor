@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            //treeGrid: true,
            //treeGridModel: "adjacency",
            url: "/WorkflowControl/WFC07/GetGridJsonList",
            height: $(window).height() - 128,
            colModel: [
				    { label: "SID", name: "SID", key: true, hidden: true, width: 80, align: 'left' },
                    { label: "FLOWID", name: "FLOWID", hidden: true, width: 80, align: 'left' },
                    { label: "單別", name: "FLOWNM", width: 60, align: 'left' },
                    { label: "單號", name: "DOCID", width: 100, align: 'left' },
                    {
                       label: "加班日", name: "MRDT", width: 80, align: 'left',
                       formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                    },
                    { label: "加班原因", name: "SUBJECT", width: 200, align: 'left' },
                    { label: "部門代號", name: "DEPID", width: 60, align: 'left' },
                    { label: "部門名稱", name: "DEPM_NM", width: 150, align: 'left' },
                    { label: "申請人員", name: "EMP_NM", width: 80, align: 'left' },

                    {
                        label: "簽核狀態", name: "STATUS", width: 80, align: 'left',
                        formatter: function (cellvalue, options, rowObject) {
                            //return top.clients.dept[rowObject.STATUS] == null ? "" : top.clients.dept[rowObject.STATUS].fullname;
                            if (rowObject.STATUS == 'OP') {
                                return '<span class=\"label label-default\">未送簽</span>';
                            } else if (rowObject.STATUS == 'SN') {
                                return '<span class=\"label label-primary\">簽核中</span>';
                            } else if (rowObject.STATUS == 'CF') {
                                return '<span class=\"label label-success\">已核准</span>';
                            } else if (rowObject.STATUS == 'CL') {
                                return '<span class=\"label label-warning\">已退回</span>';
                            } else if (rowObject.STATUS == 'NL') {
                                return '<span class=\"label label-danger\">已作廢</span>';
                            } else if (rowObject.STATUS == 'PB') {
                                return '<span class=\"label label-default\">已撤簽</span>';
                            }

                        }
                    },
                     {
                         label: "送簽日", name: "SENDDATE", width: 80, align: 'left',
                         formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                     },
                    { label: "簽核日", name: "SIGNDATE", width: 80, align: 'left',
                        formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                    },

                     { label: "簽核人員", name: "EMPLYID", hidden: true, width: 80, align: 'left' },
                      {
                          label: "執行", name: "", width: 150, align: 'center',
                          formatter: function (cellvalue, options, rowObject) {
                              var usercode = rowObject.EMPLYID;
                              var ovrtno = rowObject.DOCID;
                              var sid = rowObject.SID;
                              var signdate = rowObject.SIGNDATE;
                              //alert(signdate);
                              var v_button = '<button class=\'btn btn-default btn-xs\' onclick=\'btn_details(\"' + ovrtno + '\")\'>查看</button> ';
                              
                              if (signdate == '' | signdate == null) {
                                  v_button += ' <button class=\'btn btn-primary btn-xs\' onclick=\'btn_sign(\"' + ovrtno + '\",\"' + usercode + '\")\'>會簽</button> ';
                                  v_button += ' <button class=\'btn btn-success btn-xs\' onclick=\'btn_sign(\"' + ovrtno + '\",\"' + usercode + '\")\'>簽核</button>';
                              }
                              return v_button;

                          }
                      },

            ],
            pager: "#gridPager",
            rows:200,
            viewrecords: true,
            multiselect: true,
            loadComplete: function () {
                //$("#cb_" + this.id).click();
            },
            loadComplete: function () {
                $(this).find(">tbody>tr.jqgrow").addClass("myAltRowClassEven");

                var rowIds = $('#gridList').jqGrid('getDataIDs');
                for (i = 0; i < rowIds.length; i++) {//iterate over each row
                    rowData = $('#gridList').jqGrid('getRowData', rowIds[i]);
                    //set background style if ColValue === true\
                    if (rowData['Status'] === "鎖定") {
                        //$('#gridList').jqGrid('setRowData', rowIds[i], false, "myAltRowClassLock");
                    } 
                } 
            }

            //sortname: 'DOCID asc,SENDDATE desc',
            //viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });

    }

    // 多選功能
    function getSelectedRows() {
        var grid = $("#gridList");
        var rowKey = grid.getGridParam("selrow");

        if (!rowKey) {
            alert("No rows are selected");
            //msg = "沒有選取到任何資料列!。";
            //window.setTimeout(function () {
            //    $.modalMsg(msg, "warning");
            //}, 500);
        }
        else {
            var selectedIDs = grid.getGridParam("selarrrow");
            var result = "";
            for (var i = 0; i < selectedIDs.length; i++) {
                result += selectedIDs[i] + ",";
            }

            alert(result);
        }
    }

    // 批次簽核
    function btn_batch() {
        getSelectedRows();
    }
    // 單筆簽核
    function btn_sign() {
        var keyValue = arguments[0];
        var keyValue1 = arguments[1];
        alert(keyValue + ',' + keyValue1);
    }
    function btn_details() {
        //var keyValue = $("#gridList").jqGridRowValue().SID;
        var keyValue = arguments[0];
        //alert(keyValue);
        $.modalOpen({
            id: "Details",
            title: "查看資料",
            url: "/WorkflowControl/WFC07/Details?keyValue=" + keyValue,
            width: "800px",
            height: "600px",
            btn: null,
        });
    }
</script>

