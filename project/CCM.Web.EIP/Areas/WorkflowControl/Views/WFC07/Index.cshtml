<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            //treeGrid: true,
            //treeGridModel: "adjacency",
            url: "/WorkflowControl/WFC07/GetGridJsonList",
            height: $(window).height() - 100,
            colModel: [
				    { label: "SID", name: "SID", key: true, hidden: true, width: 80, align: 'left' },
                    { label: "FLOWID", name: "FLOWID", hidden: true, width: 80, align: 'left' },
                     {
                         label: "簽核", name: "", width: 40, align: 'center',
                         formatter: function (cellvalue, options, rowObject) {
                             var usercode = rowObject.EMPLYID;
                             var ovrtno = rowObject.DOCID;
                             var sid = rowObject.SID;
                             var signdate = rowObject.SIGNDATE;
                             var status = rowObject.STATUS;
                             //alert(signdate);
                             if (status == 'SN' | signdate == null) {
                                 return ' <button id="NF-signwith" class=\'btn btn-success btn-xs\' onclick=\'btn_signwith(\"' + ovrtno + '\",\"' + sid + '\",\"' + usercode + '\")\'>簽核</button>';
                             } else {
                                 return ''
                             }
                         }
                     },
                    { label: "單別", name: "FLOWNM", width: 50, align: 'left' },
                    { label: "單號", name: "DOCID", width: 80, align: 'left' },
                    {
                       label: "加班日", name: "MRDT", width: 70, align: 'left',
                       formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                    },
                    { label: "預計加班", name: "DEMIN", width: 50, align: 'center' },
                    { label: "加班原因", name: "SUBJECT", width: 200, align: 'left' },
                    { label: "部門代號", name: "DEPID", hidden: true, width: 60, align: 'left' },
                    { label: "部門名稱", name: "DEPM_NM", width: 120, align: 'left' },
                    { label: "申請人員", name: "EMP_NM", width: 60, align: 'left' },
                    { label: "STATUS", name: "STATUS", hidden: true, width: 60, align: 'left' },
                    {
                        label: "簽核狀態", name: "", width: 60, align: 'left',
                        formatter: function (cellvalue, options, rowObject) {
                            //return top.clients.dept[rowObject.STATUS] == null ? "" : top.clients.dept[rowObject.STATUS].fullname;
                            if (rowObject.STATUS == 'OP') {
                                return '<h5><span class=\"label label-default\">未送簽</span></h5>';
                            } else if (rowObject.STATUS == 'SN') {
                                return '<h5><span class=\"label label-primary\">簽核中</span></h5>';
                            } else if (rowObject.STATUS == 'CF') {
                                return '<h5><span class=\"label label-success\">已核准</span></h5>';
                            } else if (rowObject.STATUS == 'CL') {
                                return '<h5><span class=\"label label-warning\">已退回</span></h5>';
                            } else if (rowObject.STATUS == 'NL') {
                                return '<h5><span class=\"label label-danger\">已作廢</span></h5>';
                            } else if (rowObject.STATUS == 'PB') {
                                return '<h5><span class=\"label label-default\">已撤簽</span></h5>';
                            }

                        }
                    },
                    { label: "送簽日", name: "SENDDATE", width: 80, align: 'left',
                        formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                    },
                    { label: "簽核日", name: "SIGNDATE", width: 80, align: 'left',
                        formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                    },

                     { label: "簽核人員", name: "EMPLYID", hidden: true, width: 80, align: 'left' },
                     {
                          label: "查看", name: "", width: 40, align: 'center',
                          formatter: function (cellvalue, options, rowObject) {
                              var usercode = rowObject.EMPLYID;
                              var ovrtno = rowObject.DOCID;
                              var sid = rowObject.SID;
                              var signdate = rowObject.SIGNDATE;
                              //alert(signdate);
                              var v_button = '<button class=\'btn btn-default btn-xs\' onclick=\'btn_details(\"' + ovrtno + '\")\'>查看</button> ';
                              return v_button;
                          }
                     },
                     //{
                     //    label: "簽核", name: "", width: 40, align: 'center',
                     //    formatter: function (cellvalue, options, rowObject) {
                     //        var usercode = rowObject.EMPLYID;
                     //        var ovrtno = rowObject.DOCID;
                     //        var sid = rowObject.SID;
                     //        var signdate = rowObject.SIGNDATE;
                     //        var status = rowObject.STATUS;
                     //        //alert(signdate);

                     //        if (signdate == '' | signdate == null) {
                     //            return ' <button class=\'btn btn-info btn-xs\' onclick=\'btn_sign(\"' + ovrtno + '\",\"' + sid + '\",\"' + usercode + '\")\'>核准</button>';
                     //        } else {
                     //            return ''
                     //        }
                     //    }
                     //},
                     
                       //{
                       //    label: "退回", name: "", width: 40, align: 'center',
                       //    formatter: function (cellvalue, options, rowObject) {
                       //        var usercode = rowObject.EMPLYID;
                       //        var ovrtno = rowObject.DOCID;
                       //        var sid = rowObject.SID;
                       //        var signdate = rowObject.SIGNDATE;
                       //        var status = rowObject.STATUS;
                       //        //alert(signdate);
                       //        if (status == 'SN' | signdate == null) {
                       //            return ' <button class=\'btn btn-danger btn-xs\' onclick=\'rejectSN(\"' + ovrtno + '\",\"CL\")\'>退回</button>';
                       //        } else {
                       //            return ''
                       //        }
                       //    }
                       //},
                      {
                          label: "OVRT46", name: "OVRT46", hidden: true, width: 50, align: 'center'
                      },
                      {
                          label: "", name: "",  width: 50, align: 'center'
                      },

            ],
            //pager: "#gridPager",
            rowNum: 10000,
            viewrecords: true,
            multiselect: true,
            loadComplete: function () {
                //$("#cb_" + this.id).click(); //全選
                //var cbs = $("tr.jqgrow > td > input.cbox:even", grid[0]);
                //cbs.attr("style", "vertical-align:middle;");

                $(this).find(">tbody>tr.jqgrow").addClass("myAltRowClassEven");
                var rowIds = $('#gridList').jqGrid('getDataIDs');
                for (i = 0; i < rowIds.length; i++) {//iterate over each row
                    rowData = $('#gridList').jqGrid('getRowData', rowIds[i]);
                    //set background style if ColValue === true\
                    if (rowData['OVRT46'] === "Y") {
                        $('#gridList').jqGrid('setRowData', rowIds[i], false, "myAltRowClassLock");
                    }
                }
            },
            rowattr: function (item, rd, rowid) {
                //$('.cbox').attr('checked', true);
                return { "onclick": "showChoiceCount()" };
            }
            //sortname: 'DOCID asc,SENDDATE desc',
            //viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });

    }

    function showChoiceCount() {
       // 顯示已選取幾筆
        setTimeout(function () {
            var grid = $("#gridList");
            var rowKey = grid.getGridParam("selrow");
            if (rowKey) {
                var selectedIDs = grid.getGridParam("selarrrow");
                var result = "";
                var count = 0;
                for (var i = 0; i < selectedIDs.length; i++) {
                    result += selectedIDs[i] + ",";
                    count += 1;
                }
            }
            $('#choiceCount').text(count);
            //alert(result);
        }, 200);

    }
    // 批次簽核功能
    function batchSign() {
        var grid = $("#gridList");
        var rowKey = grid.getGridParam("selrow");

        if (!rowKey) {
            //alert("No rows are selected");
            msg = "沒有選取到任何資料列!";
            window.setTimeout(function () {
                $.modalMsg(msg, "warning");
            }, 500);
        }
        else {
            var selectedIDs = grid.getGridParam("selarrrow");

            var result = "";
            var count = 0;
            for (var i = 0; i < selectedIDs.length; i++) {
                result += selectedIDs[i] + ","; // 簽核途程明細 SID(已選取的)
                count += 1;
            }
            $('#choiceCount').text(count);
            //alert(result + ',' + emplyid);

            $.modalConfirm("注：您確定要批次核准加班單嗎？", function (r) {
                if (r) {
                    $.ajax({
                        url: "/WorkflowControl/WFC00/ConfirmSign",
                        data: { signids: result },
                        dataType: "json",
                        async: false,
                        success: function (data) {
                            msg = "簽核成功!";
                            window.setTimeout(function () {
                                $.modalMsg(msg, "success");
                            }, 500);
                            $.currentWindow().$("#gridList").trigger("reloadGrid");
                        },
                        error: function (data) {
                            msg = "簽核發生異常!";
                            window.setTimeout(function () {
                                $.modalMsg(msg, "warning");
                            }, 500);
                        }
                    });
                }
            });

        }
    }

    // 批次簽核
    function btn_batch() {
        batchSign();
    }
    // 單筆簽核
    function btn_sign() {
        var keyValue = arguments[0];  // 加班單號
        var keyValue1 = arguments[1]; // 簽核途程明細 SID
        var keyValue2 = arguments[2]; // 簽核人員工號
        //alert(keyValue + ',' + keyValue1 + ',' + keyValue2);

        $.modalConfirm("注：您確定要單筆核准加班單嗎？", function (r) {
            if (r) {
               $.ajax({
                url: "/WorkflowControl/WFC00/ConfirmSign",
                data: { signids: keyValue1, emplyid: keyValue2 },
                dataType: "json",
                async: false,
                success: function (data) {
                    msg = "簽核成功!";
                    window.setTimeout(function () {
                        $.modalMsg(msg, "success");
                    }, 500);
                    $.currentWindow().$("#gridList").trigger("reloadGrid");
                },
                error: function (data) {
                    msg = "簽核發生異常!";
                    window.setTimeout(function () {
                        $.modalMsg(msg, "warning");
                    }, 500);
                }
            });
            }
        });
    }

    // 退回加班單
    function rejectSN() {
        var keyValue = arguments[0];  // 加班單號
        var keyValue1 = arguments[1]; // 退回 : CL
        //alert('加班單號:' + keyValue + ',ACT:' + keyValue1);
        $.modalConfirm("注：您確定要退回此加班單嗎？", function (r) {
            if (r) {
                $.ajax({
                    url: "/WorkflowControl/WFC00/RejectSign",
                    data: { keyValue: keyValue, act: keyValue1 },
                    dataType: "json",
                    async: false,
                    success: function (data) {
                        msg = "退回成功!";
                        window.setTimeout(function () {
                            $.modalMsg(msg, "success");
                        }, 500);
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    },
                    error: function (data) {
                        msg = "退回加班單發生異常!";
                        window.setTimeout(function () {
                            $.modalMsg(msg, "warning");
                        }, 500);
                    }
                });
            }
        });
    }

    // 會簽
    function btn_signwith() {

        var keyValue = arguments[0];  // 加班單號
        var keyValue1 = arguments[1]; // 簽核途程明細 SID
        var keyValue2 = arguments[2]; // 簽核人員工號

        //alert(keyValue);
        $.modalOpen({
            id: "Form2",
            title: "簽核作業",
            url: "/WorkflowControl/WFC07/Signwith?keyValue=" + keyValue + "&keyValue1=" + keyValue1,
            width: "940px",
            height: "740px",
            btn: null,
        });
    }

    // 查看
    function btn_details() {
        //var keyValue = $("#gridList").jqGridRowValue().SID;
        var keyValue = arguments[0];
        //alert(keyValue);
        $.modalOpen({
            id: "Details",
            title: "查看資料",
            url: "/WorkflowControl/WFC07/Details?keyValue=" + keyValue,
            width: "800px",
            height: "600px",
            btn: null,
        });
    }
</script>

