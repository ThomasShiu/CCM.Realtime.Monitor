    //}
    function FETB_Change() {
        // 開始加班
        var d1 = $('#FETB').val();
        var fd1 = new Date(d1);
        // 申請日期
        var appdt = fd1.Format("yyyy-MM-dd");
        // 判斷 平日 假日
