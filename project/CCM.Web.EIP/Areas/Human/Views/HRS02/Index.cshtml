				        //{ label: "補充保費", name: "ADD_EXP", width: 60, align: 'right' },
				        //{ label: "自提退休金", name: "LPS_EXP", width: 60, align: 'right' },
				        //{ label: "加班時數1", name: "OVT1_HR", width: 60, align: 'right' },
				        //{ label: "加班時數2", name: "OVT2_HR", width: 60, align: 'right' },
