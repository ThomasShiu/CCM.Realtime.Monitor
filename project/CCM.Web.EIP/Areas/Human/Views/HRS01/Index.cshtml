@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
        initSelect();
    })
    function gridList() {
        var vhost = '@Request.Url.Host';
        var vport = '@Request.Url.Port';
        var pathlink = '';
        if (vport != 80) {
            vport = ':@Request.Url.Port';
            pathlink = 'http://' + vhost + vport + '/';
        } else {
            pathlink = 'http://' + vhost + '/';
        }

        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/Human/HRS01/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
					{ label: "SID", name: "SID", hidden: true, key: true, width: 80, align: 'left' },
                    {
                        label: "照片", name: "PhotoUrl", width: 80, align: 'left',
                        formatter: function (cellvalue) {
                            var photourl = cellvalue.replace("~/", "");
                            return "<img src='" + pathlink + photourl + "' class=\"rounded\" style=\"height:50px;width:50px\">";
                        }
                    },
			        { label: "工號", name: "EMP_NO", width: 80, align: 'left' },
				    { label: "姓名", name: "EMP_NM", width: 80, align: 'left' },
				    { label: "生日", name: "BRD_DT", hidden: true, width: 80, align: 'left' },
				    { label: "到職日", name: "ARV_DT", width: 80, align: 'left' },
				    { label: "職位", name: "JOB_NM", width: 80, align: 'left' },
                    { label: "部門代號", name: "DEPM_NO", width: 80, align: 'left' },
				    { label: "部門名稱", name: "DEPM_NM", width: 80, align: 'left' },
				    

            ],
			pager: "#gridPager",
			sortname: 'EMP_NO asc',
			viewrecords: true,
			loadComplete: function () {
			    $(this).find(">tbody>tr.jqgrow").addClass("myAltRowClassEven");
			    //$(this).find(">tbody>tr.jqgrow:odd").addClass("myAltRowClassEven");
			    //$(this).find(">tbody>tr.jqgrow:even").addClass("myAltRowClassEven");
			}
        });
        $("#time_horizon a.btn-default").click(function () {
            $("#time_horizon a.btn-default").removeClass("active");
            $(this).addClass("active");
            $('#btn_search').trigger("click");
        });
        $("#btn_search").click(function () {
            var timeType = $("#time_horizon a.active").attr('data-value');
            var queryJson = {
                keyword: $("#txt_keyword").val(),
                keyword2: $('#DepartmentID').val(),
                timeType: $("#time_horizon a.active").attr('data-value'),
            }
            $gridList.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
            }).trigger('reloadGrid');
        });

       
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增資料",
            url: "/Human/HRS01/Form",
            width: "640px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Form",
            title: "修改資料",
            url: "/Human/HRS01/Form?keyValue=" + keyValue,
            width: "640px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/Human/HRS01/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().SID },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().SID;
        $.modalOpen({
            id: "Details",
            title: "查看資料",
            url: "/Human/HRS01/Details?keyValue=" + keyValue,
            width: "640px",
            height: "700px",
            btn: null,
        });
    }

    function initSelect() {
        // 部門
        $("#DepartmentID").bindSelect2({
            url: "/Human/HRS00/GetHR_DEP",
            id: "DEPID",
            text: "DEPNM"
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-info" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
           @* <a id="NF-add" authorize="yes" class="btn btn-info dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建資料</a>*@
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已選中<span>1</span>項</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改資料</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>刪除資料</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看資料</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="工號/姓名" style="width: 100px;">
                        <select id="DepartmentID" name="DepartmentID" class="form-control " style="width: 200px;">
                            <option value=""></option>
                        </select>
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-info"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
                <td style="padding-left: 10px;">
                    <div id="time_horizon" class="btn-group">
                        <a class="btn btn-default active" data-value="1">全部</a>
                        <a class="btn btn-default" data-value="2">近3個月</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

